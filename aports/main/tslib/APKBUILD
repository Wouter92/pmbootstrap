_hash=1ad02d41da8dd3f01d7333d881c3069e649e7026
pkgname=tslib
pkgver=1.13-rc2
pkgrel=0
pkgdesc="Touchscreen Access Library"
arch="all"
url="https://github.com/kergoth/tslib"
license="GPL2"
makedepends="autoconf automake libtool linux-headers"
#source="${pkgname}-${pkgver}-${pkgrel}.tar.gz::https://github.com/kergoth/tslib/releases/download/$pkgver/$pkgname-$pkgver.tar.xz"

source="${pkgname}-${pkgver}-${pkgrel}.tar.gz::https://github.com/kergoth/tslib/archive/${_hash}.tar.gz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
    cd $srcdir/$pkgname-${_hash}
    #cd $srcdir/$pkgname-$pkgver
    ./autogen.sh
    ./configure --prefix=/usr --sysconfdir=/etc
    make
}

package() {
    cd $srcdir/$pkgname-${_hash}
    make DESTDIR="$pkgdir" install
}
